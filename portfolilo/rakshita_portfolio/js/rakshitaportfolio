function validateform() {
    // This is for form validation in Portfolio
    var name = document.forms["contactform"]["name"].value;
    var email = document.forms["contactform"]["email"].value;
    var subject = document.forms["contactform"]["subject"].value;
    var message = document.forms["contactform"]["message"].value;

    if (name == "" || email == "" || subject == "" || message == "") { /*This checks if any of the fields are blank*/
        alert("Empty field found! Please fill the form completely."); /*This code works only if any of the fields are blank(as a popup in the page)*/
    }

    else {
        alert("Thank you for your feedback!"); /*This code works if all of the fields are filled(as a popup in the page)*/
    }
}
